<%= simple_form_for [@timecapsule, @memorybox] do |f| %>
  <div class="form-inputs-tc">
    <div class="w-100">
      <%= f.input :title,
      :placeholder => "Dad" %>
    </div>
  </div>

  <div class="form-actions mt-4">
    <div class="card-link-wrapper">
      <%= f.button :submit, class:"text-black rounded-pill" %>
    </div>
  </div>
<% end %>
