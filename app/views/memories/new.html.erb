<div class = "newmemoryheader">
<h1>New Memories</h1>
</div>
<div class = "newmemoryform">
<p class = "newmemoryformdescription"><strong>You can create a new memory</strong></p>
<%= simple_form_for [@memorybox, @memory] do |f| %>
  <%= f.input :title,
  :placeholder => "My amazing memory" %>
  <%= f.input :text,
  :placeholder => "Always be kind to others" %>
  <%= f.input :media, as: :file %>
  <%= f.input :date_of_memory,
              :placeholder => "My wonderful memory happened on",
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
  <div class = "finalsubmit">
  <%= f.submit "Create memory", class: "btn btn-primary rounded-pill" %>
  </div>
<% end %>
<%= link_to "return to memory box", ownmemories_path, class: "btn rounded-pill" %>
  </div>
