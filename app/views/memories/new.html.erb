<div class = "newmemoryheader">
<h1>New Memories</h1>
</div>
<div class = "newmemoryform">
<p class = "newmemoryformdescription"><strong>You can create a new memory</strong></p>
<%= simple_form_for [@memorybox, @memory] do |f| %>
  <%= f.input :title %>
  <%= f.input :text %>
  <%= f.input :media, as: :file %>
  <%= f.input :date_of_memory %>
  <div class = "finalsubmit">
  <%= f.submit "Submit memory", class: "btn btn-primary rounded-pill" %>
  </div>
<% end %>
  </div>

<%= link_to "return to memory box", ownmemories_path %>
