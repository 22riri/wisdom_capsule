<div class="content-container">
  <div class="headline highlight d-flex justify-content-between align-items-center">
    <h1 class="text-center mt-3">Time Capsules</h1>
    <%= link_to 'Create', new_timecapsule_path, class:"btn btn-primary rounded-pill" %>
  </div>

  <div class="cards container">
    <% @timecapsules.each do |timecapsule| %>
      <div class="card col-12 col-sm-6 col-lg-4">
        <h2><%= timecapsule.name %></h2>
        <p class="text-center"><%= timecapsule.created_at.strftime("%B %d, %Y") %></p>
        <%= link_to "Check timecapsule", timecapsule_path(timecapsule), class: "btn btn-primary rounded-pill" %>
      </div>
    <% end %>
  </div>
</div>
